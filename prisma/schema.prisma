// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  name         String
  login        String  @unique
  pass         String
  city         String
  event_type   String
  token        String  @unique @default(uuid())
  avg_visitors Int?
  events       Event[]
}

model Event {
  id           Int           @id @default(autoincrement())
  photo        String
  title        String
  format       String
  city         String
  date_event   DateTime
  date_close   DateTime
  date_open    DateTime
  date_end     DateTime
  age          String
  site         String?
  description  String?
  published    Boolean       @default(false)
  user_id      Int
  address      String
  place        String
  refinement    String?
  user         User          @relation(fields: [user_id], references: [id])
  ticket_types Ticket_type[]
}

model Ticket_type {
  id          Int    @id @default(autoincrement())
  name        String
  price       Int
  description String?
  count       Int
  event_id    Int
  event       Event  @relation(fields: [event_id], references: [id])
}

