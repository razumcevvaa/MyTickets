// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  events Event[]
}

model Event {
  id          Int     @id @default(autoincrement())
  photo       String
  title       String
  format      String
  price       String
  date        DateTime
  location    String
  age         Int
  description String
  content     String
  published   Boolean @default(false)
  authorId    Int
  author      User    @relation(fields: [authorId], references: [id])
}
